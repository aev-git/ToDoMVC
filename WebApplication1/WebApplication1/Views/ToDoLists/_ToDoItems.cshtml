@model IEnumerable<ToDoItem>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Memo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDone)
                </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Memo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDone)
            </td>
          
            <td>
                <a asp-controller="ToDoItems" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="ToDoItems" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="ToDoItems" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
